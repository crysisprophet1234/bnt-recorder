DISCORD_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id
API_BASE_URL=http://localhost:3000

# Storage configuration
STORAGE_TYPE=local           # "local" (default) or "s3"
S3_ENDPOINT=                 # S3 endpoint URL (required if STORAGE_TYPE=s3)
S3_ACCESS_KEY_ID=            # S3 access key (required if STORAGE_TYPE=s3)
S3_SECRET_ACCESS_KEY=        # S3 secret key (required if STORAGE_TYPE=s3)
S3_BUCKET=                   # S3 bucket name (required if STORAGE_TYPE=s3)

# Logging configuration
LOG_LEVEL=info               # info, warn, debug, error, etc.
LOG_ROTATION_DAYS=7          # Number of days to keep log files (e.g., 7, 14)
LOG_PATH=                    # Path to store the log files